script.js
let dados = {};

function mostrarAba(id) {
  document.querySelectorAll(".aba").forEach(aba => {
    aba.classList.remove("ativa");
  });
  document.getElementById(id).classList.add("ativa");
}

function avancar() {
  const veiculo = document.getElementById("veiculo").value;
  const motorista = document.getElementById("motorista").value;

  if (!veiculo || !motorista) {
    alert("Preencha todos os campos.");
    return;
  }

  dados.veiculo = veiculo;
  dados.motorista = motorista;

  mostrarAba("aba2");
}

function finalizar() {
  const kmInicial = Number(document.getElementById("kmInicial").value);
  const kmFinal = Number(document.getElementById("kmFinal").value);

  if (kmFinal <= kmInicial) {
    alert("KM final inv√°lido.");
    return;
  }

  dados.km = kmFinal - kmInicial;
  dados.data = new Date().toLocaleString();

  document.getElementById("resultado").innerText =
    `Percurso total: ${dados.km} km`;

  document.getElementById("info").innerHTML = `
    <strong>Ve√≠culo:</strong> ${dados.veiculo}<br>
    <strong>Motorista:</strong> ${dados.motorista}<br>
    <strong>Data:</strong> ${dados.data}
  `;

  mostrarAba("aba3");
}

function reiniciar() {
  document.getElementById("veiculo").value = "";
  document.getElementById("motorista").value = "";
  document.getElementById("kmInicial").value = "";
  document.getElementById("kmFinal").value = "";

  mostrarAba("aba1");
}
